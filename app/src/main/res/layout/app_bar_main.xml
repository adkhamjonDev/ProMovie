<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/appbar"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ProMovie.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background_color"
            app:popupTheme="@style/Theme.ProMovie.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tittle"
                        android:textColor="@color/txt_color"
                        android:textSize="18sp"
                        android:text="Popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/showDialog"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:padding="15dp"
                                android:src="@drawable/ic_down_arrow__1_"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/search"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="12dp"
                                android:src="@drawable/ic_loupe__1_" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/linearView"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:padding="12dp"
                                android:src="@drawable/ic_list_of_three_items_with_squares_and_lines"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/grid3View"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:padding="12dp"
                                android:src="@drawable/ic_grid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:visibility="visible"
                            android:id="@+id/grid2View"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:padding="10dp"
                                android:src="@drawable/ic_grid_svgrepo_com"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/more"
                            app:cardElevation="0dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackground"
                            app:cardCornerRadius="17.5dp"
                            app:cardBackgroundColor="@color/toolbar_background_color"
                            android:layout_width="35dp"
                            android:layout_height="35dp">
                            <ImageView
                                android:padding="5dp"
                                android:src="@drawable/ic_baseline_more_vert_24_2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/viewF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <include
            android:id="@+id/contentMain"
            layout="@layout/content_main" />
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/internetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:text="Сервер не доступен"
            android:textColor="#E6FFFFFF"
            android:textSize="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="@string/internet_subtitle"
            android:textColor="@color/item_linear_txt"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/retry"
            android:backgroundTint="#36BABABA"
            android:text="Повторить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>